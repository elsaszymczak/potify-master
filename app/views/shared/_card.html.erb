<% if element.class == Pot %>
  <% pot_picture = element.photo ? element.plant.photo : element.photo %>
<% else %>
  <% pot_picture = element&.photo %>
<% end %>

<div class="frame grow <%= "selected-plant" if select %>" style="background-image: linear-gradient(to top, rgba(0, 0, 0, 0.3) 0%,rgba(255, 255, 255, 0.07) 60%), url('<%= cl_image_path(pot_picture) %>');" data-url="<%= pot_picture %>">
  <% if params["action"] == "home" %>
    <div>
      <%= cl_image_tag(element.user.photo, width: 42, crop: :fill, class: "avatar dropdown-toggle") %>
    </div>
    <div class="player-info">
      <% user_name = "" %>
      <% element.user.first_name.nil? ? user_name = "Player" : user_name = element.user.first_name %>
      <p><%= user_name %></p>
      <p>ðŸŒŸ<%= element.user.points %></p>
    </div>
  <% end %>

  <div class="card-content">
    <div class="element-name">
      <h4><%= element.name.upcase %></h4>
        <% if element.class == Pot %>
          <div class="element-category">
            <%= element.plant.name %>
          </div>
        <% end %>
    </div>
  </div>
</div>


