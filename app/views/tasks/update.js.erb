
var dashboard = document.querySelector('.wrapper-dashboard');
var potShow = document.querySelector('#container-pot-show');
var navBadgeContainer = document.getElementById("badge-container");

if (dashboard) {
  dashboard.innerHTML = '<%= j render "./pages/dashboard-container", user: @user, pots: @pots %>';
};
if (potShow){
  potShow.innerHTML = '<%= j render "./pots/pot_content", pot: @pot %>';
}
<% if current_user.tasks.where(completed: false).count > 0 %>
  if (navBadgeContainer) {
    navBadgeContainer.innerHTML = '<%= j render "./shared/navbar_badge", user: @user %>';
  };
<% else %>
  navBadgeContainer.remove();
<% end %>

bindSweetAlertButtonDemo();
updateTaskStatus();
