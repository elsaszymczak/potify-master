<div class="container container-gray container-show">
  <div class="pot-content">
    <% if current_user.admin == true %>
      <%= link_to "update", edit_plant_path(@plant) %>
    <% end %>
    <div class="plant-image" style="background-image: url('<%= @plant.photo %>')">
    </div>
    <div class="pot-info">
      <div class="header">
        <h3><%= @plant.name %></h3>
      </div>
      <div class="border-top">
      </div>
      <p class="about_the_plant">About this plant: <%= @plant.description %></p>
      <div class="border-top-small">
      </div>
      <%= render "shared/plant_information", plant: @plant %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
